@model List<ChatSite.Models.Product>

@{
    ViewData["Title"] = "Stock Filters";
}

<h2>Stock Filters</h2>

<form method="get" action="/Home/FilterAll">
    <h3>Price Filter</h3>
    <label>Min $:</label>
    <input type="number" step="0.01" name="minPrice" />
    <label>Max $:</label>
    <input type="number" step="0.01" name="maxPrice" />

    <h3>Sector</h3>
    <label><input type="checkbox" name="sector" value="Tech" /> Tech</label>
    <label><input type="checkbox" name="sector" value="Finance" /> Finance</label>
    <label><input type="checkbox" name="sector" value="Health" /> Health</label>
    <label><input type="checkbox" name="sector" value="Energy" /> Energy</label>

    <h3>Volume Filter</h3>
    <label>Min Volume:</label>
    <input type="number" name="minVolume" />
    <label>Max Volume:</label>
    <input type="number" name="maxVolume" />

    <h3>Fundamental Criteria</h3>
    <label><input type="checkbox" name="lowPE" value="true" /> Low P/E (&lt;20)</label>
    <label><input type="checkbox" name="highROE" value="true" /> High ROE (&gt;15%)</label>

    <h3>Technical Criteria</h3>
    <label><input type="checkbox" name="lowRSI" value="true" /> Low RSI (&lt;40)</label>
    <label><input type="checkbox" name="aboveMA" value="true" /> Price Above Moving Avg</label>

    <br /><br />
    <button type="submit">Apply All Filters</button>
</form>

<hr />

<h2>Filtered Stocks</h2>

<table border="1">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Sector</th>
            <th>Volume</th>
            <th>P/E</th>
            <th>ROE</th>
            <th>RSI</th>
            <th>Moving Avg</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Sector</td>
                <td>@product.Volume</td>
                <td>@product.PE</td>
                <td>@product.ROE</td>
                <td>@product.RSI</td>
                <td>@product.MovingAverage</td>
            </tr>
        }
    </tbody>
</table>
